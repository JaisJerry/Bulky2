@page
@model razorBulky.Pages.Categories.IndexModel
<h1>Category List</h1>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create"  class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Category Name</td>
                <td>Display Order</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.CategoryName
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a asp-page="/Categories/Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary"> <i class="bi bi-pen-fill"></i>Edit</a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

