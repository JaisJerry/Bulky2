@page
@model razorBulky.Pages.Categories.DeleteModel
<form method="post">
    <div class="border p-3 mt-4">
        <input asp-for="Category.CategoryId" />
        <div class="row">
            <h2 class="text-primary"> Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.CategoryName" class="p-0"></label>
            <input asp-for="Category.CategoryName" disabled class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-Page="/Category/Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </div>

</form>