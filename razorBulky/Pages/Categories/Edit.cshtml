@page
@model razorBulky.Pages.Categories.EditModel
<form method="post">
    <div class="border p-3 mt-4">
        <input asp-for="Category.CategoryId" hidden />
        <div class="row">
            <h2 class="text-primary"> Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.CategoryName" class="p-0"></label>
            <input asp-for="Category.CategoryName" class="form-control" />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asppage="/Categories/Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </div>

</form>