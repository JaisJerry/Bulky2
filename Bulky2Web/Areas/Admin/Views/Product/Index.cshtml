@model IEnumerable<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
           <h2 class="text-primary">
               Product List
           </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create
            </a>
        </div>
    </div> 
<table class="table table-bordered table-striped">
    <thead>
        <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>listPrice</th>
                <th>price50</th>
                <th>price100</th> 
                <th>category</th>
                <th>coverType</th>
                
            <td></td>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model.OrderBy(u => u.Id)) 
        {
        <tr>
            <td>
                        @obj.Title
            </td>
            <td>
                        @obj.Author
            </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        @obj.Price
                    <td>
                            @obj.Price50
                    </td>
                    <td>
                            @obj.category
                    </td>
                    <td>
                            @*@obj.coverType*@
                    </td>
                    <td>
                            @*@obj.coverType*@
                    </td>
                    
                                      
            <td>
                <div class="w-75 btn-group" role="group">

                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pen-fill"></i>Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                    
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
